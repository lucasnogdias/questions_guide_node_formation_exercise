<%- include ('partials/header.ejs') %>
<body html>
  <%- include ('partials/navbar.ejs') %>
  <div class="container">
    <div class="card" id="form-question">
      <div class="card-header">
        <h3>Ask a question</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/save_question">
          <label>Title</label>
          <input type="text" placeholder="Title" class="form-control" name="title">
          <br>
          <label>Description</label>
          <textarea placeholder="Describe your question here" class="form-control" name="description"></textarea>
          <br>
          <button class="btn btn-primary">Ask!</button>
        </form>
      </div>
    </div>
  </div>
</body>
